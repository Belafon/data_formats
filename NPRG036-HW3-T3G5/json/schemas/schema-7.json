{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/typStravy.schema.json",
    "title": "TypStravy",
    "description": "Objekt pro konkrétní typ stravy",
    "type": "object",
    "properties": {
        "název": {
            "description": "Identifikuje konkrétní typ stravy.",
            "type": "string"
        },
        "cena": {
            "type": "object",
            "properties": {
                "currency": {
                    "type": "string",
                    "enum": ["EUR", "CZK"]
                },
                "value": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "additionalProperties": false, 
            "required": [ "currency", "value" ]
        },
        "kalorie": {
            "type": "number",
            "minimum": 0
        }
    },
    "additionalProperties": false, 
    "required": [ "název", "cena", "kalorie" ]
}
