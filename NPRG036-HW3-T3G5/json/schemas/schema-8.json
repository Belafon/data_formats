{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/zamestnanec.schema.json",
    "title": "Zaměstnanec",
    "description": "Informace o konkrétním zaměstnanci",
    "type": "object",
    "properties": {
        "givenName": {
            "type": "string"
        },
        "familyName": {
            "type": "string"
        },
        "plat": {
            "type": "object",
            "properties": {
                "currency": {
                    "type": "string",
                    "enum": ["EUR", "CZK"]
                },
                "value": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "additionalProperties": false, 
            "required": [ "currency", "value" ]
        },
        "telefonníČíslo": {
            "type": "string",
            "pattern": "^tel:(\\+[0-9]{3})?[0-9]{9}$"
        }
        
    },
    "required": ["givenName", "familyName", "plat", "telefonníČíslo"]
}
